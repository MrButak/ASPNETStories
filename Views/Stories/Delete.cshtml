@model Stories.Models.StoriesTable

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex flex-column w-100 align-items-center">
    <h3>Are you sure you want to delete this?</h3>
</div>

<div class="w-100 container-fluid d-flex flex-column align-items-center gap-4 bg-light p-4">
    <div class="card w-100">
        <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.StoryTitle)</h5>
        @*<p class="card-text">@Html.DisplayFor(model => model.StoryBody)</p>*@
        </div>
    </div>
</div>
    
<form asp-action="Delete" class="pt-3">
    <input type="hidden" asp-for="StoryId" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to List</a>
</form>
