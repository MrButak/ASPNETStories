@*@model Stories.Models.StoriesTable*@
@model Stories.ViewModels.CreateStoryViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="d-flex flex-column w-100 align-items-center">
    <h3>Tell your story...</h3>
</div>

<form asp-action="Create" class="d-flex flex-column gap-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="StoryTitle" class="control-label"></label>
        <input asp-for="StoryTitle" class="form-control" />
        <span asp-validation-for="StoryTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ParagraphText" class="control-label"></label>
        <input asp-for="ParagraphText" class="form-control" />
        <span asp-validation-for="ParagraphText" class="text-danger"></span>
    </div>

    <div class="form-group d-flex justify-content-between align-items-center">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-controller="Home" asp-action="Index">Back to List</a>
    </div>
</form>

