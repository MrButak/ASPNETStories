@model IEnumerable<Stories.Models.StoriesTable>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoryTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoryBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoryCreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoryUpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoryTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryCreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryUpdatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
