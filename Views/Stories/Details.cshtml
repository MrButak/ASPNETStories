@model Stories.Models.StoriesTable

@{
    ViewData["Title"] = "Details";
}

<div class="d-flex flex-column w-100 align-items-center">
    <h3>Read Story</h3>
</div>

<div class="w-100 container-fluid d-flex flex-column align-items-center gap-4 bg-light p-4">

    <div class="card w-100">
        <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.StoryTitle)</h5>
        <p class="card-text">@Html.DisplayFor(model => model.StoryBody)</p>
        <p class ="card-text">@Html.DisplayFor(model => model.StoryCreatedAt)</p>
        </div>
    </div>

</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.StoryId">Edit Story</a> |
    <a asp-controller="Home" asp-action="Index">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model?.StoryId">Delete</a>
</div>
