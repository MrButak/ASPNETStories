@model IEnumerable<Stories.Models.StoriesTable>

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column w-100 align-items-center p-2">
    <h3 class="no-spacing">Stories</h3>
    <a asp-controller="Stories" asp-action="Create" class="p-2">
        <i class="bi bi-plus-circle-fill fs-1"></i>
    </a>
</div>

<div class="w-100 container-fluid d-flex flex-column align-items-center gap-4 bg-light p-4">

    @if(!Model.Any())
    {
        <p class="no-spacing">No stories, make history and be the first to tell yours.</p>
    }
    @foreach(var story in Model)
    {
    <div class="card w-100">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => story.StoryTitle)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => story.StoryBody)</p>
            <a asp-controller="Stories" asp-action="Details" asp-route-id="@story.StoryId">Read more</a>
            <p class ="card-text">@Html.DisplayFor(modelItem => story.StoryCreatedAt)</p>
        </div>
    </div>
    }

</div>

        
